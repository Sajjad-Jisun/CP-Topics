#include <bits/stdc++.h>
using namespace std;

bool cmp(pair<int,int> &a, pair<int,int> &b) {
    if (a.first == b.first) 
        return a.second > b.second;  // second in descending
    return a.first < b.first;        // first in ascending
}

int main() {
    vector<pair<int,int>> v = {{1,2}, {1,5}, {2,3}, {2,1}, {1,4}};

    sort(v.begin(), v.end(), cmp);

    for(auto &p : v) {
        cout << p.first << " " << p.second << endl;
    }
}


//

sort(v.begin(), v.end(), [](auto &a, auto &b) {
    return (a.first == b.first) ? a.second > b.second : a.first < b.first;
});


//
